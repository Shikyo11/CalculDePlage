<Window x:Class="CalculDePlage.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Name="MainWindow_This"
        xmlns:local="clr-namespace:Reseau"
        Title="MainWindow" Height="350" Width="786.093">
    <Grid HorizontalAlignment="Left" Width="517">
        <DataGrid x:Name="dgNbPoste" HorizontalAlignment="Left" Margin="10,10,-248,0" VerticalAlignment="Top" RenderTransformOrigin="-0.561,-3.883" Height="159" Width="755" AutoGenerateColumns="False" ItemsSource="{Binding Path=ListSousReseau}" >
            <DataGrid.Columns>
                <DataGridTextColumn Header="Nom du sous reseau" Binding="{Binding NomSousReseau}" />
                <DataGridTextColumn Header="Nombre de postes" Binding="{Binding NombreDePoste}" />
                <DataGridTextColumn Header="Masque de sous reseau" Binding="{Binding MasqueSousReseau}" />
                <DataGridTextColumn Header="Ip de départ" Binding="{Binding IpDepart}" />
                <DataGridTextColumn Header="Adresse de Broadcast" Binding="{Binding AdresseBroadcast}" IsReadOnly="True" />
                <DataGridTextColumn Header="Nombre d'adresse maximum" Binding="{Binding NombreAdresse}" IsReadOnly="True" />
                <DataGridTextColumn Header="Pourcentage" Binding="{Binding PourcentageAdresseUtilise, Converter={StaticResource PourcentageUtiliseConverter}}" IsReadOnly="True" />
            </DataGrid.Columns>
            <DataGrid.RowStyle>
                <Style TargetType="{x:Type DataGridRow}">
                    <Setter Property="Background">
                        <Setter.Value>
                            <MultiBinding Converter="{StaticResource BackGroundRowMultiValueConverter}">
                                <Binding Path="NombreAdresse"></Binding>
                                <Binding Path="NombreDePoste"></Binding>
                            </MultiBinding>
                        </Setter.Value>
                    </Setter>
                </Style>
            </DataGrid.RowStyle>
        </DataGrid>
    </Grid>
</Window>
